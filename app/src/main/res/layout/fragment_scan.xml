<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ScanFragment">

    <?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/barcodeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/rounded_corners_background_white"
        android:divider="@drawable/divider_vertical"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/barcodeEdT"
            style="@style/TextViewStyle.Green.Size_17"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/qr_code"
            android:background="@null"
            tools:text="@tools:sample/lorem"
            android:imeOptions="actionSearch"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/barcodeIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_gravity="center"
            android:padding="@dimen/padding_normal"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/ic_baseline_camera_alt_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/searchWithTextBtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_gravity="center"
            android:padding="@dimen/padding_normal"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/ic_baseline_search_24" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/barcode_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/search_btn"
        app:layout_constraintEnd_toStartOf="@id/search_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/search_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        app:layout_constraintTop_toBottomOf="@id/search_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/counter_layout"
        layout="@layout/qounter_layout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_name_tv"
        app:layout_constraintTop_toBottomOf="@id/counter_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_name_tv"
        app:layout_constraintStart_toStartOf="@id/item_name_tv"
        app:layout_constraintEnd_toEndOf="@id/item_name_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>